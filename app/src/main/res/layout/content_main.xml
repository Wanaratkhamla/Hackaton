<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.firebaseapp.wanarat.firebaseapp.Knowledge"
    tools:showIn="@layout/knowledge">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:text="ข้อควรรู้ในไตรมาสแรก"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_below="@+id/button5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/background_dark"
                android:background="@color/colorAccent"
                android:textColorLink="@android:color/white"
                android:textAllCaps="false" />

            <Button
                android:text="ข้อควรรู้ในไตรมาสสอง"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_below="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/background_dark" />

            <Button
                android:text="ข้อควรรู้ในไตรมาสสาม"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_below="@+id/button1"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:background="@color/colorAccent" />

            <Button
                android:text="วิตามินและอาหารเสริม"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button2"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:id="@+id/button3" />

            <Button
                android:text="การรับประทานอาหารระหว่างตั้งครรภ์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button3"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:id="@+id/button4"
                android:background="@color/colorAccent" />

            <Button
                android:text="วัคซีนที่ควรรับระหว่างตั้งครรภ์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button4"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:id="@+id/button5" />

            <Button
                android:text="ออกกำลังกายระหว่งตั้งครรภ์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button7"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:id="@+id/button6"
                android:background="@color/colorAccent" />

            <Button
                android:text="อารการที่ผิดปกติ ควรพบแพทย์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_below="@+id/button8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="เมื่อไหร่ที่ควรจะอัลตราซาวด์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                android:layout_below="@+id/button5"
                android:layout_toRightOf="@+id/button3"
                android:layout_toEndOf="@+id/button3"
                android:background="@color/colorAccent" />

            <Button
                android:text="อาการปกติที่เกินขึ้นในระหว่างตั้งครรภ์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:elevation="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="การนับลูกดิ้น"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button10"
                tools:background="@color/colorAccent" />

            <Button
                android:text="อาการบ่งบอกว่าใกล้คลอด"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button11" />

            <Button
                android:text="เพศสัมพันธืระหว่างตั้งครรภ์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button12"
                android:background="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
